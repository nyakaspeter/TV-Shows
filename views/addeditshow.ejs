<%- include("shared/header") %>
<%- include("shared/logo", { src: locals.show ? "/editshow.png" : "/addshow.png" }) %>
<%- include("shared/floatingbutton", { href: locals.show ? `/show/${show._id}` : "/", icon: "fas fa-arrow-left", top: "40px", left: "20px" }) %>
<%- locals.show && include("shared/floatingbutton", { href: `/show/${show._id}/delete`, icon: "fas fa-trash-alt", top: "40px", right: "20px" }) %>

<form method="POST">
  <div class="form-outline mb-4">
    <input name="title" id="title" type="text" class="form-control form-control-lg" value="<%= locals.show?.title %>"
      required />
    <label for="title" class="form-label">Title</label>
  </div>

  <div class="form-outline mb-4">
    <input name="year" id="year" type="number" class="form-control form-control-lg" value="<%= locals.show?.year %>"
      required />
    <label for="year" class="form-label">Year</label>
  </div>

  <div class="form-outline mb-4">
    <input name="poster" id="poster" type="url" class="form-control form-control-lg"
      value="<%= locals.show?.poster %>" />
    <label for="poster" class="form-label">Poster link</label>
  </div>

  <div class="form-outline mb-4">
    <textarea name="description" id="description" class="form-control form-control-lg"
      rows="6"><%= locals.show?.description %></textarea>
    <label for="description" class="form-label">Description</label>
  </div>

  <div class="form-check d-flex justify-content-center">
    <input name="favorite" id="favorite" class="form-check-input me-2" type="checkbox"
      <%= locals.show?.favorite ? "checked" : "" %> />
    <label for="favorite" class="form-check-label">
      Add to favorites
    </label>
  </div>

  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-lg btn-success rounded-pill mt-5"><i class="fas fa-save me-2"></i>Save
      changes</button>
  </div>
</form>

<%- include("shared/footer") %>